<script>
    $(document).ready(function() {
        // Function to animate counting effect
        function countTo(target, elementId, duration) {
            var countFrom = 0;
            var speed = Math.round(duration / target);
            var currentNumber = 0;
            var interval = setInterval(function() {
                currentNumber += 1;
                $(elementId).text(currentNumber);
                if (currentNumber == target) {
                    clearInterval(interval);
                }
            }, speed);
        }
        
        // Call countTo function for each counter
        countTo(93, '#teachersCounter', 3000);
        countTo(75, '#yearsCounter', 3000);
        countTo(6589, '#studentsCounter', 100);
        countTo(6, '#buildingCounter', 3000);
    });
</script>
