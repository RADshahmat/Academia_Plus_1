            </div>
        </div>
        <div class="notice-board">
            <h2 style="text-align: center; padding-bottom: 20px;">Notice Board</h2>
            <div class="notice-container"> 
                <ul class="notice-list">   
                    <!-- eta database theke fetch hobe loop chaliye -->
                    <% for( let index = 0; index < notices_info.length; index++ ) { %>
                        <li class="notice-item">
                            <a href="notice" class="notice-link"><%= notices_info[index][0] %> : <%= notices_info[index][1] %></a>
                        </li>
                            <% } %>
                </ul>
            </div>
        </div>
