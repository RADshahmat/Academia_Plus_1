<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Course Overview</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
    <script src="js/teacherSideAssignment.js" defer></script>
    <link rel="stylesheet" href="css/teacher.css" />
    <style>
      .left_header {
        display: flex;
        align-items: center;
      }

      .header_logo {
        max-width: 4rem;
        height: auto;
        margin-right: 1rem;
      }

      #l_header {
        flex: 1;
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;

        background-color: #2c3e50;
        padding-top: 60px;
      }
      .sidebar ul {
        margin-top: 4rem;
      }
    </style>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
      }

      section {
        margin: 20px;
      }

      h2 {
        color: #333;
      }

      .class-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }

      .class-card {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 8px;
        width: 200px;
        margin-bottom: 20px;
        text-align: center;
        transition: transform 0.2s;
      }

      .class-card a {
        text-decoration: none;
        color: #333;
      }

      .class-card:hover {
        transform: scale(1.05);
      }

      footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      button {
        background-color: #ffffff;
        border: none;
      }
      .class-container {
        width: 80%;
        margin: auto;
      }
      #section2 {
        display: none;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="left_header" style="display: flex">
        <img
          class="header_logo"
          src="images/—Pngtree—school logo design template vector_9104626.png"
        />
        <h1 id="l_header">All Assignments</h1>
      </div>

      <div class="logout" style="margin-right: 2rem; background-color: #158865">
        <div id="LogOut">
          <form action="/logout" method="POST">
            <button class="btn btn-primary" type="submit" id="logOutDropdown">
              LogOut
            </button>
          </form>
        </div>
      </div>
    </header>

    <%- include('../includes/teacher_sidebar.ejs') %>
    <div id="ham_icon"><img src="images/menu.png" alt="" /></div>

    <div class="content" id="content-container">
      <div class="table-container" style="margin: 5rem 0 0 5rem">
        <table class="table">
          <thead>
            <tr>
              <th>Course Title</th>
              <th>Assignment Title</th>
              <th>Class</th>
              <th>Expand</th>
            </tr>
          </thead>
          <tbody>
            <% for( let index = 0; index < resources_info.length; index++ ) { %>
            <tr>
              <% for( let i = 0; i < 3; i++ ) { %>
              <td><%= resources_info[index][i] %></td>

              <% } %>

              <td>
                <form
                  class="form_assignment"
                  action=""
                  id="assignment_details_form"
                >
                  <input
                    type="hidden"
                    name="assignment_id"
                    value="<%= resources_info[index][5] %>"
                  /><button
                    type="button"
                    class="btn-success"
                    style="padding: 5px; border: none; border-radius: 5px"
                  >
                    View Details
                  </button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <button
        class="btn btn-primary"
        style="
          padding: 5px;
          border: none;
          border-radius: 5px;
          margin-left: 5rem;
        "
      >
        <a href="teachersdashboard" style="text-decoration: none; color: white"
          >go back</a
        >
      </button>
    </div>
    <div class="content" id="details_container">
          <h1>Course Title</h1>
          <h2>Assignment Title</h2>
          <h3>Instructions</h3>
         <table>
          <tr>
            <th><p>Image</p></th>
            <th><p>Name</p></th>
            <th><P>ID No</P></th>
            <th><p>File</p></th>
          </tr>
          <tr>
            <td><img src="" alt=""></td>
            <td><p></p></td>
            <td><p></p></td>
            <td><Button>View</Button></td>
          </tr>
         </table>
          <div>
            
            
            
          </div>

    </div>

    <script>
      const ham_icon = document.getElementById("ham_icon");
      const side_bar = document.querySelector(".sidebar");
      const content1 = document.querySelector(".content");

      ham_icon.addEventListener("click", function () {
        if (
          side_bar.style.display === "none" ||
          side_bar.style.display === ""
        ) {
          side_bar.style.display = "block";
          content1.style.display = "none";
        } else {
          side_bar.style.display = "none";
          content1.style.display = "block";
        }
      });

      function adjustHeader() {
        const header = document.querySelector(".left_header");
        const logo = document.querySelector(".header_logo");
        const headerText = document.getElementById("l_header");

        headerText.style.fontSize = window.innerWidth / 30 + "px";

        const maxLogoWidth = 200;
        const logoWidth = Math.min(window.innerWidth / 4, maxLogoWidth);
        logo.style.width = logoWidth + "px";
        header.style.marginLeft = window.innerWidth / 30 + "px";

        if (window.innerWidth > 600) {
          content1.style.display = "block";
        }
      }

      adjustHeader();
      const screenHeight = window.innerHeight;
      document.querySelector(".sidebar").style.height = screenHeight;
      console.log(screenHeight);

      window.addEventListener("resize", adjustHeader);
    </script>
  </body>
</html>
