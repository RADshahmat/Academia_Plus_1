    <style>
      .left_header {
        display: flex;
        align-items: center;
      }

      .header_logo {
        max-width: 4rem; /* Ensures the image does not exceed its natural size */
        height: auto; /* Ensures the image maintains its aspect ratio */
        margin-right: 1rem; /* Adjust margin as needed */
      }

      #l_header {
        flex: 1; /* Allows the h1 to take up remaining space */
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;

        background-color: #2c3e50;
        padding-top: 60px;
      }
      .sidebar ul {
        margin-top: 4rem;
      }
    </style>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
      }

      section {
        margin: 20px;
      }

      h2 {
        color: #333;
      }

      .class-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }

      .class-card {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 8px;
        width: 200px;
        margin-bottom: 20px;
        text-align: center;
        transition: transform 0.2s;
      }

      .class-card a {
        text-decoration: none;
        color: #333;
      }

      .class-card:hover {
        transform: scale(1.05);
      }

      footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      button {
        background-color: #ffffff;
        border: none;
      }
      .class-container {
        width: 80%;
        margin: auto;
      }
      #section2 {
        display: none;
      }
    </style>
