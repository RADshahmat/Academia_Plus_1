<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #initiateTransaction {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        
    </style>
</head>
<body>
    <button id="initiateTransaction">Initiate Transaction</button>
    <script>
        
            document.getElementById('initiateTransaction').addEventListener('click', function() {
                // Make an asynchronous request to initiate the transaction
                fetch('/init')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        
                        if (data.body) {
                            
                            window.location.href = data.body;
                        } else {
                            console.error('GatewayPageURL is missing in the response:', data);
                        }
                    })
                    .catch(error => {
                        console.error('Error initiating transaction:', error);
                    });
            });
        
        
    </script>
</body>
</html>