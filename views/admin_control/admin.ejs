<script>
   function countToTotal(cardId, totalStudents, intervalSpeed) {
            const countSpan = document.getElementById(`count${cardId}`);
            let count = 0;

            const interval = setInterval(() => {
                count++;
                countSpan.textContent = count;

                if (count === totalStudents) {
                    clearInterval(interval); // Stop counting when reach the total
                }
            }, intervalSpeed); // Adjust the interval for speed
        }

        // Call the counting functions when the page is loaded
        window.onload = function () {
            countToTotal(1, 1005, 20); // For Card 1
            countToTotal(2, 900, 20);  // For Card 2
            countToTotal(3, 1005, 20);
            countToTotal(4, 1005, 20);
            countToTotal(5, 1005, 20);
            countToTotal(6, 1005, 20);
            countToTotal(7, 1005, 20);
            countToTotal(8, 1005, 20);
            countToTotal(9, 1005, 20);
            countToTotal(10, 1005, 20);
            countToTotal(11, 1005, 20);
            // Add similar calls for other cards
        };
</script>

